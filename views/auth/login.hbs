<div class="box card container background" style="width: 65rem">
  <div class="card-body margin padding-login">
    <h2 class="card-title signup-title">Login</h2>

    <form class="singup-form" action="/auth/login" method="POST" id="form-container">

      <div class="form-group">
        <label for="username">Username</label>
        <input name="username" type="text" class="form-control" id="username" placeholder="Username">
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>

      <br><br>

      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <div class=" auth-center">
        <button class="create-account login-button" type="submit" class="btn btn-primary">Login</button>
    <br><br>

    <p class="account-message">
      Don't have an account yet?
      <a href="/auth/signup">Signup</a>
    </p>
</div>
      
    </form>
  
  </div>
</div>



