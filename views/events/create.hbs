<div class="container">
  <h1 class="create-header">Want to host an event? </h1>

  <section class="create-background-one">
    <div class="card all-boxes create-background-two">

      <form class="form-group" action="/events/create" method="POST" id="form-container">
        <label for="name">Name</label>
        <input id="name" type="text" name="name" placeholder="Name of the Event" class="form-control">
        <br> <br>

        <label for="description">Description</label>
        <input id="description" type="text" name="description" placeholder="Describe your Event" class="form-control">
        <br>
        <br>
        <label for="type">Choose</label>
        <select for="type" name="type" class="form-control">
          <option value="breakfast">Breakfast</option>
          <option value="brunch">Brunch</option>
          <option value="lunch">Lunch</option>
          <option value="dinner">Dinner</option>
        </select>
    </div>
  </section>

  <br><br>

  <section>
    <div class="row justify-content-around">

      <div class="card col-md-5 all-boxes create-background-one">
        <div class="section-two">
          <label for="glutenfree">Gluten-free</label>
          <input value="true" id="glutenfree" type="checkbox" name="glutenfree">

          <hr>

          <label for="dairyfree">Dairy-free</label>
          <input value="true" id="dairyfree" type="checkbox" name="dairyfree">

          <hr>

          <label for="veg">Vegetarian</label>
          <input value="true" id="veg" type="checkbox" name="veg">
          <hr>

          <label for="vegan">Vegan</label>
          <input value="true" id="vegan" type="checkbox" name="vegan">

          <hr>

          <label for="shellfish">Contains Shellfish</label>
          <input value="true" id="shellfish" type="checkbox" name="shellfish">

          <hr>

          <label for="nuts">Contains Nuts</label>
          <input value="true" id="nuts" type="checkbox" name="nuts">
        </div>
      </div>

      <div class="card all-boxes col-md-5 create-background-one">

        <label for="date">Date of the event</label>
        <input id="date" type="date" name="date" class="form-control">

        <br><br>

        <label for="time">Time</label>
        <input id="time" type="text" name="time" placeholder="00:00" class="form-control">

        <br><br>

        <label for="address">Address</label>
        <input id="address" type="text" name="address" placeholder="Calle Pez 9 Madrid" class="form-control">

        <br><br>

        <label for="forks">How many guests do you want?</label>
        <input id="forks" type="text" name="forks" placeholder="4" class="form-control">
      </div>
    </div>
  </section>

  <br><br>

  <section class="d-flex justify-content-center">

    <br><br>


    <button class="create-account">Create your next event</button>
   
  </section>
  </form>

</div>
</div>



<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

